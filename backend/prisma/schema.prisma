generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
}

// --------------------
// ENUMS
// --------------------
enum UserRole {
  customer
  admin
}

enum UserStatus {
  active
  locked
}

enum WorkspaceStatus {
  active
  inactive
}

enum SpaceType {
  desk
  meeting_room
}

enum SpaceStatus {
  available
  maintenance
}

enum BookingStatus {
  pending
  confirmed
  completed
  cancelled
}

enum PaymentProvider {
  momo
  cash
}

enum PaymentStatus {
  pending
  success
  failed
}

enum RefundStatus {
  pending
  success
  failed
}

// --------------------
// 1️⃣ USERS  (UNCHANGED)
// --------------------
model User {
  id             String     @id @default(uuid()) @map("user_id")
  fullName       String     @map("full_name") @db.VarChar(100)
  email          String     @unique @db.VarChar(255)
  phone          String     @db.VarChar(20)
  passwordHash   String     @map("password_hash") @db.Text
  role           UserRole
  status         UserStatus
  verified       Boolean
  verifyToken    String?    @map("verify_token") @db.VarChar(255)
  verifySentAt   DateTime?  @map("verify_sent_at") @db.DateTime(0)
  verifyExpireAt DateTime?  @map("verify_expire_at") @db.DateTime(0)
  resetToken     String?    @map("reset_token") @db.VarChar(255)
  resetSentAt    DateTime?  @map("reset_sent_at") @db.DateTime(0)
  resetExpireAt  DateTime?  @map("reset_expire_at") @db.DateTime(0)
  createdAt      DateTime   @default(now()) @map("created_at")

  bookings         Booking[]
  processedRefunds Refund[]  @relation("ProcessedByAdmin")

  @@map("users")
}

// --------------------
// 2️⃣ WORKSPACES  (UNCHANGED)
// --------------------
model Workspace {
  id          String          @id @default(uuid()) @map("workspace_id")
  name        String          @db.VarChar(100)
  address     String          @db.Text
  description String          @db.Text
  latitude    Float
  longitude   Float
  status      WorkspaceStatus
  createdAt   DateTime        @default(now()) @map("created_at")

  floors Floor[] // NEW: quản lý tầng
  images WorkspaceImage[] // NEW: tách JSON ra bảng riêng

  @@map("workspaces")
}

// Bảng ảnh workspace (tách JSON)
model WorkspaceImage {
  id          String    @id @default(uuid())
  workspaceId String
  url         String
  workspace   Workspace @relation(fields: [workspaceId], references: [id])

  @@map("workspace_images")
}

// --------------------
// 3️⃣ FLOORS (NEW)
// --------------------
model Floor {
  id          String   @id @default(uuid()) @map("floor_id")
  workspaceId String
  name        String   @db.VarChar(100)
  imageUrl    String?  @map("image_url") // hình nền tầng
  width       Int? // optional, scale map
  height      Int? // optional
  createdAt   DateTime @default(now()) @map("created_at")

  workspace Workspace @relation(fields: [workspaceId], references: [id])
  spaces    Space[]

  @@map("floors")
}

// --------------------
// 4️⃣ SPACES
// --------------------
model Space {
  id          String      @id @default(uuid()) @map("space_id")
  floorId     String?     @map("floor_id") // NEW: FK floor
  name        String      @db.VarChar(100)
  type        SpaceType
  capacity    Int
  priceHourly Decimal     @map("price_hourly") @db.Decimal(10, 2)
  description String      @db.Text
  status      SpaceStatus
  positionX   Int?        @map("position_x")
  positionY   Int?        @map("position_y")
  createdAt   DateTime    @default(now()) @map("created_at")

  floor     Floor?         @relation(fields: [floorId], references: [id])
  bookings  BookingSpace[] // NEW: N-N booking
  amenities SpaceAmenity[] // UNCHANGED
  images    SpaceImage[] // NEW: tách JSON

  @@map("spaces")
}

// Bảng ảnh space (tách JSON)
model SpaceImage {
  id      String @id @default(uuid())
  spaceId String
  url     String
  space   Space  @relation(fields: [spaceId], references: [id])

  @@map("space_images")
}

// --------------------
// 5️⃣ AMENITIES  (UNCHANGED)
// --------------------
model Amenity {
  id        String   @id @default(uuid()) @map("amenity_id")
  name      String   @db.VarChar(255)
  icon      String   @db.VarChar(255)
  createdAt DateTime @default(now()) @map("created_at")

  spaces SpaceAmenity[]

  @@map("amenities")
}

// --------------------
// 6️⃣ SPACE_AMENITIES (UNCHANGED)
// --------------------
model SpaceAmenity {
  spaceId   String @map("space_id")
  amenityId String @map("amenity_id")
  quantity  Int?

  space   Space   @relation(fields: [spaceId], references: [id])
  amenity Amenity @relation(fields: [amenityId], references: [id])

  @@id([spaceId, amenityId])
  @@map("space_amenities")
}

// --------------------
// 7️⃣ BOOKINGS
// --------------------
model Booking {
  id     String  @id @default(uuid()) @map("booking_id")
  userId String? @map("user_id")

  bookerEmail    String? @map("booker_email") @db.VarChar(255)
  bookerPhone    String? @map("booker_phone") @db.VarChar(20)
  bookerFullname String? @map("booker_fullname") @db.VarChar(100)

  startTime          DateTime      @map("start_time") @db.DateTime(0)
  endTime            DateTime      @map("end_time") @db.DateTime(0)
  status             BookingStatus
  cancellationReason String?       @map("cancellation_reason") @db.Text
  createdAt          DateTime      @default(now()) @map("created_at")

  user    User?          @relation(fields: [userId], references: [id])
  spaces  BookingSpace[] // NEW: N-N booking
  payment Payment?

  @@map("bookings")
}

// --------------------
// 8️⃣ BOOKING_SPACES (NEW)
// --------------------
model BookingSpace {
  id        String        @id @default(uuid()) @map("booking_space_id")
  bookingId String        @map("booking_id")
  spaceId   String        @map("space_id")
  status    BookingStatus
  booking   Booking       @relation(fields: [bookingId], references: [id])
  space     Space         @relation(fields: [spaceId], references: [id])

  @@map("booking_spaces")
}

// --------------------
// 9️⃣ PAYMENTS  (UNCHANGED)
// --------------------
model Payment {
  id              String          @id @default(uuid()) @map("payment_id")
  bookingId       String          @unique @map("booking_id")
  provider        PaymentProvider
  amount          Decimal         @db.Decimal(10, 2)
  transactionCode String?         @map("transaction_code") @db.VarChar(255)
  status          PaymentStatus
  createdAt       DateTime        @default(now()) @map("created_at")

  booking Booking @relation(fields: [bookingId], references: [id])
  refund  Refund?

  @@map("payments")
}

// --------------------
// 10️⃣ REFUNDS  (UNCHANGED)
// --------------------
model Refund {
  id           String       @id @default(uuid()) @map("refund_id")
  paymentId    String       @unique @map("payment_id")
  processedBy  String       @map("processed_by")
  refundAmount Decimal      @map("refund_amount") @db.Decimal(10, 2)
  refundRate   Int          @map("refund_rate")
  reason       String       @db.Text
  status       RefundStatus
  createdAt    DateTime     @default(now()) @map("created_at")

  payment        Payment @relation(fields: [paymentId], references: [id])
  adminProcessor User    @relation("ProcessedByAdmin", fields: [processedBy], references: [id])

  @@map("refunds")
}
